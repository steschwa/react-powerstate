{
    "compilerOptions": {
        "allowJs": false,
        "strict": true,
        "target": "ESNext",
        "moduleResolution": "Node",
        "baseUrl": "./src",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "lib": ["ES2020"],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["src/**/__tests__"]
}
